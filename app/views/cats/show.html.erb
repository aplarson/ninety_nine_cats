<h1><%= @cat.name %></h1>

<table>
  <tr>
    <td>Birth Date:</td>
    <td><%= @cat.birth_date %></td>
  </tr>
  <tr>
    <td>Age:</td>
    <td><%= @cat.age %></td>
  </tr>
  <tr>
    <td>Color:</td>
    <td><%= @cat.color %></td>
  </tr>
  <tr>
    <td>Sex:</td>
    <td><%= @cat.sex %></td>
  </tr>
  <tr>
    <td>Description:</td>
    <td><%= @cat.description %></td>
  </tr>
</table>

<h2>Rental Requests</h2>

<table>
  <tr>
    <td>Start Date</td>
    <td>End Date</td>
  </tr>
  
  <% @cat.rental_requests.each do |request| %>
    <tr>
      <td><%= request.start_date %></td>
      <td><%= request.end_date %></td>
      <% if request.pending? %>
      <td><%= button_to "Approve",
             approve_cat_rental_request_url(request),
             method: :patch %></td>
      <td><%= button_to "Deny", 
             deny_cat_rental_request_url(request),
             method: :patch %></td>
      <% end %>
    </tr>
  <% end %>
  
</table>

<%= link_to "All the cats!", cats_url %>